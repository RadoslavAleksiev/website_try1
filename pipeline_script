pipeline {
  agent any
  
  stages {
    stage('Clone Repository') {
      steps {
        git branch: 'main', url: 'https://github.com/RadoslavAleksiev/website_try1.git'
      }
    }
    
    stage('Build') {
      steps {
        // Create the destination directory
        sh 'sudo mkdir -p /var/www/html'
        sh 'sudo chown -R jenkins:jenkins /var/www/html'
        sh 'sudo chmod -R 755 /var/www/html'
        
        // Copy the index.html file to the web server directory
        sh 'cp index.html /var/www/html'
      }
    }
  }
}
